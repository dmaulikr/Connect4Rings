<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="dabami.connect4rings"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="com.dabami.connect4rings.Connect4RingsApplication"
        android:allowBackup="true"
        android:icon="@drawable/empty_slot"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dabami.connect4rings.view.activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.dabami.connect4rings.view.activities.GameActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
